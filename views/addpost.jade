extends layout

block content
	.container
		.panel.panel-default

			.panel-heading
				h3.panel-title Add Post 
			.panel-body
				.row
					.col-md-12
						form(method='post', action='/posts/add', enctype="multipart/form-data")
							.form-group
								label Title 
								input.form-control(name='title',type='text', placeholder='Title')
							.form-group
								label Category
								select.form-control (name= 'category')
									if categories
										each category, i in categories
											option(value='#{category.title}') #{category.title}
							.form-group
								label Author
								input.form-control(name='author',type='text', placeholder='Author')
							.form-group
								label Body
								textarea.form-control(name = 'body',id='body' placeholder='Content')
							button.btn.btn-default(type='submit', value = 'Upload') Submit
							script(src='//cdn.ckeditor.com/4.7.1/full/ckeditor.js')
							script
								| CKEDITOR.replace('body');

